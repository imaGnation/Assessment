<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/button_function_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_function_Two"
        style="@style/button_style"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:onClick="onClickSelectFunction" />

    <Button
        android:id="@+id/button_function_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_function_one"
        style="@style/button_style"
        android:layout_above="@id/button_function_two"
        android:onClick="onClickSelectFunction" />


</RelativeLayout>